@using X.PagedList.Mvc
@model X.PagedList.PagedList<BeleZando.Models.Cliente>
<div id="listarCliente" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm modal-md modal-lg">
        <div class="modal-content">
            <div class="modal-header modal-roxo">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><strong>BUSCAR Cliente</strong><br /></h4>
                <p class="lead">Consulte a lista abaixo e clique para selecionar um Cliente:</p>
            </div>
            <div class="modal-body text-center">
                <hr />
                @foreach (var item in Model)
                {
                    <div class="row" style="margin-top:24px;">
                        <div class="col-md-1">@Html.DisplayFor(modelItem => item.CodigoCliente)</div>
                        <div class="col-md-2"><i class="fa fa-user"></i> @Html.DisplayFor(modelItem => item.NomeCliente)</div>
                        <div class="col-md-4"><i class="fa fa-envelope"></i> @Html.DisplayFor(modelItem => item.EmailCliente)</div>
                        <div class="col-md-3"><i class="fa fa-info-circle"></i> @Html.DisplayFor(modelItem => item.CpfCliente)</div>
                        <div class="col-md-2">
                            <button class="btn btn-roxo" name="lnkCodigoCliente" id="lnkCodigoCliente-@(item.CodigoCliente)" onclick='SelecionarClienteLinkModal("lnkCodigoCliente-@(item.CodigoCliente)")' value="@(item.CodigoCliente)">Selecione <i class="fa fa-check"></i></button>
                        </div>
                    </div>
                    <hr />
                }
            </div>
            <div class="modal-footer">
                @Html.PagedListPager(Model, pagina => Url.Action("Consult", new { pagina }), new PagedListRenderOptions { ActiveLiElementClass = ""})                
            </div>
        </div>
    </div>
</div>
